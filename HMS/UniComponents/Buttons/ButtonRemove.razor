@namespace UniComponents

<div data-toggle="tooltip" data-placement="left" title="@(Disabled ? TooltipMessage : "")">
    <a @onclick="OnClick" style="@(Disabled ? " pointer-events: none;" : "" ) ">
        <i href="#" class="bi bi-x-circle btn btn-danger @(Disabled ? " disabled" : "" )"></i>
    </a>
</div>


@code
{
    /// <summary>
    /// Vypnutie tlačidla, Default false
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; } = false;

    /// <summary>
    /// Vnutro @onclick, Default EventCallback.Empty
    /// </summary>
    [Parameter]
    public EventCallback OnClick { get; set; } = EventCallback.Empty;

    /// <summary>
    /// Nastaví text tooltipu, keď je Disabled => true, Default "Nemožno odstániť"
    /// </summary>
    [Parameter]
    public string TooltipMessage { get; set; } = "Nemožno odstániť";


}
