@namespace UniComponents

@if (Checked)
{
    <i class="bi bi-check-circle-fill text-success @("fs-" + Size)"></i>
}
else
{
    <i class="bi bi-x-circle-fill text-danger @("fs-" + Size)"></i>
}

@code {
    /// <summary>
    /// Bool, default false
    /// </summary>
    [Parameter]
    public bool Checked { get; set; } = false;
    /// <summary>
    /// Velkost ikony, hodnoty od 1 - 6, default 5
    /// </summary>
    [Parameter]
    public int Size { get; set; } = 5;


}
