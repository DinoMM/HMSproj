@namespace SkladModul
@page "/Objednavka/AddObj"
@inject AddObjednavViewModel ViewModel

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="container ">
        <div class="row">
            <h1>Vytvorenie objednávky > Voľba adries</h1>
        </div>

        @* *** *@
        <div class="container" style="height: 10rem;">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#home">Dodavateľ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#profile">Odoberateľ</a>
                </li>
            </ul>
            <div class="tab-content">

                <div class="tab-pane fade show active" id="home">
                    <div class="row g-3 p-1 align-items-center">
                        <div class="col-auto">
                            <label for="ICO" class="col-form-label">*IČO dodavateľa:</label>
                        </div>
                        <div class="col col-2">
                            <input type="text" @onchange="ViewModel.ZmenaDodCommand.Execute" id="ICO" class="form-control" value=@(ViewModel.CorrectDod ? ViewModel.Ico : "")>
                        </div>
                        <div class="col col-6">
                            <input type="text" readonly @bind="ViewModel.NazovDodavatela" disabled="disabled" id="Nazov" class="form-control">
                        </div>
                    </div>

                    <div class="row g-2 align-items-center">
                        <div class="col-auto">
                            <label for="PopisBox" class="col-form-label"> Popis objednávky:</label>
                        </div>
                        <div class="col col-5">
                            <textarea id="PopisBox" @bind="ViewModel.Popis" class="form-control" style="resize: none;" />
                        </div>
                    </div>
                    
                </div>

                <div class="tab-pane fade" id="profile">
                    <div class="row g-3 p-1 align-items-center">
                        <div class="col-auto">
                            <label for="ICO" class="col-form-label">*IČO odberateľa:</label>
                        </div>
                        <div class="col col-2">
                            <input type="text" @onchange="ViewModel.ZmenaOdoCommand.Execute" id="ICO" class="form-control" value=@(ViewModel.CorrectOdo ? ViewModel.Odberatel.ICO : "")>
                        </div>
                        <div class="col col-6">
                            <input type="text" readonly @bind="ViewModel.Odberatel.Nazov" disabled="disabled" id="Nazov" class="form-control">
                        </div>
                    </div>
                </div>

            </div>
        </div>
        @* *** *@
        <div class="row g-3 pt-2 align-items-center justify-content-center">
            <div class="col-auto">
                <button type="button" disabled="@(!ViewModel.CorrectDod || !ViewModel.CorrectOdo)" @onclick="GoNext" class="btn btn-primary">Vytvoriť</button>
                <button type="button" class="btn btn-secondary" @onclick="@(() => NavigationManager.NavigateTo("/Objednavka"))">Späť</button>
            </div>
        </div>
       
    </div>
</div>



@code {

    private void GoNext()
    {
        ViewModel.NastavObjednavkuCommand.Execute(null);
        NavigationManager.NavigateTo("/Objednavka/PridatPolozky");
    }
}
